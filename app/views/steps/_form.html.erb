<%= form_with(model: step, id: "create-step") do |form| %>
  <% if step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
      <% step.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field w-100">
    <% if @isEdition %>
      <%= form.label :title, "Nome da lista" %>
    <% end %>
    <%= form.text_field :title, required: true, class: "w-100" %>
  </div>

  <div class="field d-none">
    <%= form.label :position %>
    <%= form.number_field :position %>
  </div>

  <div class="field d-none">
    <%= form.label :board_id %>
    <%= form.text_field :board_id %>
  </div>

  <div class="actions">
    <%= form.submit (step.id ? "Editar lista" : "Criar lista"), :class => class_string("btn", "green-theme", "green-theme--hover text-white") %>
    
  </div>
<% end %>
