<% if step.id %>
<div  id="<%= dom_id(step) %>">
  <div class="step-item">
    <div class="d-flex justify-content-between ">
      <span class="step-item--title"><%= step.title %></span>
      <div>
        <%= link_to edit_step_path(step.id), remote: true, method: :get, class: 'btn pr-1' do %>
          <%= fa_icon "edit" %>
        <% end %>
        <%= link_to step, method: :delete, data: { confirm: 'A exclusÃ£o Ã© definitiva,  deseja prosseguir?' }, class: 'btn pl-0' do %>
          <%= fa_icon "trash" %>
        <% end %>
      </div>
    </div>

    <div class="d-flex flex-column">
      <div class="tasks-container" id="<%= "t_#{dom_id(step)}" %>" data-url="<%= sort_tasks_path(step) %>" >
        <%= render step.tasks %>
      </div>
      <div class="task-item">
        <%= render "tasks/form", task: step.tasks.build %>
      </div>
    </div>
  </div>
</div>
<% end %>