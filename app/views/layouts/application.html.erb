<!DOCTYPE html>
<html>
  <head>
    <title>Trellike</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag image_url('fav.png') %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="main-area">
    <nav class="navbar bg shadow-sm navbar-light fixed-x position-relative">
      <%= link_to home_path, class: "mx-auto" do %>
       <img src="<%= image_url("logo.png") %>">
      <% end %>
    </nav>
    <section class="content main co ntainer-fluid">
    <%= yield %>
    </section>
  </body>
</html>
